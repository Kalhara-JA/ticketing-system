# =============================================================================
# TICKETING SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit the actual .env file to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_URL=http://localhost:3000
AUTO_CLOSE_DAYS=14
ENABLE_ATTACHMENTS=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# For local development: postgresql://postgres:postgres@localhost:5432/tickets?schema=public
# For Docker: postgresql://postgres:postgres@db:5432/tickets?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tickets?schema=public

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Better Auth configuration
BETTER_AUTH_SECRET=your-long-random-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
# Admin user credentials (automatically created on first setup)
# These are the default values - customize them for your environment
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_NAME=System Administrator
ADMIN_PASSWORD=Admin123!

# =============================================================================
# EMAIL CONFIGURATION (RESEND)
# =============================================================================
# Resend API key for sending emails
RESEND_API_KEY=your-resend-api-key-here

# Email sender configuration
# Must be a verified domain/email in your Resend account
EMAIL_FROM=Support <onboarding@resend.dev>

# =============================================================================
# MINIO/S3 STORAGE CONFIGURATION
# =============================================================================
# MinIO endpoint configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_SSL=false

# MinIO external endpoint (for presigned URLs)
MINIO_EXTERNAL_ENDPOINT=localhost
MINIO_EXTERNAL_PORT=9000
MINIO_EXTERNAL_SSL=false

# MinIO credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# MinIO bucket for file storage
MINIO_BUCKET=ticket-attachments

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These variables are used by docker-compose.yml to override defaults
# Uncomment and modify if you want to customize Docker setup

# Database credentials for Docker
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=tickets

# MinIO credentials for Docker
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin
